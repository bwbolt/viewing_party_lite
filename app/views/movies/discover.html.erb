<h3>Discover Movies</h3>

<p type="button" class="btn btn-outline-primary"><%= link_to "Find Top Rated Movies", user_movies_path(@user, :q => 'top20rated') %></p>

<h3>OR</h3>

<%= form_with url: user_movies_path(@user), method: :get, local: true do |form|%>
<div class="mb-3">

  <%= form.text_field :q , class: "form-control", placeholder: "Search by movie title"%>
</div>

<div class="mb-3">
  <%= form.submit "Find Movie", class: "btn btn-primary" %>
</div>
<%end %>